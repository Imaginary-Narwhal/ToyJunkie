<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
UI_shared.xsd">

    <Button name="TJ_ToyBoxHeaderTemplate" virtual="true" inherits="BackdropTemplate">
        <Size y="30" />
        <KeyValues>
            <KeyValue key="backdropInfo" value="BACKDROP_TOAST_12_12" type="global" />
        </KeyValues>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Text" inherits="GameFontWhite" justifyH="LEFT" wordwrap="false">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="50" y="0"/>
                        <Anchor point="BOTTOMRIGHT" x="-4" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="BORDER">
                <Texture parentKey="expandIcon" file="Interface/Buttons/UI-MinusButton-Up">
                    <Size x="18" y="18"/>
                    <Anchors>
                        <Anchor point="LEFT" x="5" y="0.5"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="icon" file="Interface/Icons/TRADE_ARCHAEOLOGY_CHESTOFTINYGLASSANIMALS">
                    <Size x="20" y="20"/>
                    <Anchors>
                        <Anchor point="LEFT" x="25" y="0.5"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Button>

    <Button name="TJ_ToyTemplate" virtual="true">
        <Size y="42"/>
        <Frames>
            <Frame parentKey="icon">
                <Size x="35" y="35"/>
                <Anchors>
                    <Anchor point="LEFT" x="0"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="texture">
                            <Size x="32" y="32"/>
                            <Anchors>
                                <Anchor point="LEFT" x="10" y="0.5"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
            <Frame parentKey="toyCard" inherits="BackdropTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="21" y="0"/>
                    <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString parentKey="Text" inherits="GameFontNormal" justifyH="LEFT" wordwrap="true">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="27" y="0"/>
                                <Anchor point="BOTTOMRIGHT" x="-10" y="0"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
    </Button>
</Ui>