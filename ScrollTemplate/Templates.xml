<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
UI_shared.xsd">

    <Button name="TJ_ToyBoxHeaderTemplate" virtual="true" inherits="BackdropTemplate">
        <Size y="30" />
        <KeyValues>
            <KeyValue key="backdropInfo" value="BACKDROP_TOAST_12_12" type="global" />
        </KeyValues>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Text" inherits="GameFontNormalLeft" wordwrap="false">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="47" y="2"/>
                        <Anchor point="BOTTOMRIGHT" x="-4" y="1"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="BORDER">
                <Texture parentKey="expandIcon" file="Interface/Buttons/UI-MinusButton-Up">
                    <Size x="18" y="18"/>
                    <Anchors>
                        <Anchor point="LEFT" x="5" y="0.5"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="icon" file="Interface/Icons/TRADE_ARCHAEOLOGY_CHESTOFTINYGLASSANIMALS">
                    <Size x="20" y="20"/>
                    <Anchors>
                        <Anchor point="LEFT" x="25" y="0.5"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Button>

    <Button name="TJ_ToyTemplate" virtual="true" inherits="BackdropTemplate">
        <Size y="42"/>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Text" inherits="GameFontNormalLeft" wordwrap="true">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="47" y="2"/>
                        <Anchor point="BOTTOMRIGHT" x="-10" y="2"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="BORDER">
                <Texture parentKey="icon">
                    <Size x="32" y="32"/>
                    <Anchors>
                        <Anchor point="LEFT" x="10" y="0.5"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Button>
</Ui>